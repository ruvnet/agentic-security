{
  "name": "sparc",
  "displayName": "SPARC",
  "description": "AI pair programming with Aider in VSCode",
  "publisher": "your-publisher-id",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "MIT",
  "categories": ["Programming Languages", "Machine Learning", "Other"],
  "activationEvents": [
    "onCommand:aider.startChat",
    "onView:aiderChat",
    "onWebviewPanel:aiderChat",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "sparc-sidebar",
        "title": "SPARC",
        "icon": "resources/icon.svg"
      }]
    },
    "views": {
      "sparc-sidebar": [{
        "id": "aiderChat",
        "name": "Aider Chat",
        "type": "webview"
      }]
    },
    "commands": [{
      "command": "aider.startChat",
      "title": "Start Aider Chat",
      "category": "SPARC",
      "icon": "resources/icon.svg"
    }],
    "configuration": {
      "title": "SPARC",
      "properties": {
        "aider.port": {
          "type": "number",
          "default": 8501,
          "description": "Port for Streamlit server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "dev": "npm run watch",
    "start": "npm run compile && pip install -r src/python/requirements.txt && streamlit run src/python/app.py",
    "package": "vsce package --allow-star-activation",
    "publish": "vsce publish --allow-star-activation"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^16.18.34",
    "typescript": "^5.1.3",
    "@vscode/vsce": "^2.15.0"
  },
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  }
}